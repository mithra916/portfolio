---
const { title, problem, what, tech, link } = Astro.props;
---

<div class="project">
  <h3>{title}</h3>
  <p>{problem}</p>
  <p class="what">{what}</p>
  <p class="tech"><strong>Tech:</strong> {tech}</p>
  <a href={link} target="_blank">GitHub â†’</a>

  <style>
    .project {
      border: 1px solid #2a2a2a;
      padding: 20px;
      border-radius: 10px;
      margin-bottom: 24px;
      background-color: #111;
      transition: transform 0.2s ease;
    }

    .project:hover {
      transform: translateY(-4px);
      border-color: #444;
    }

    h3 {
      margin-bottom: 6px;
    }

    .what {
      color: #cbd5e1;
      font-size: 0.95rem;
      margin-top: 6px;
    }

    .tech {
      margin-top: 10px;
      font-size: 0.9rem;
      color: #9ca3af;
    }
  </style>
</div>
