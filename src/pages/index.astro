---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout>

<!-- ================= HERO ================= -->
<section class="hero">

  <div class="card hero-card">

   


    <!-- Heading -->
    <h1>
      I am <br />
      <span align=center>LOGA MITHRA R</span>
    </h1>

    <!-- Short intro -->
    <p class="hero-desc">
      I design and build secure systems combining cybersecurity,
      backend development, and modern UI.
    </p>

  </div>

</section>
<!-- ================= ABOUT ================= -->
<section class="about-section">

  <div class="about-grid">

    <!-- LEFT : PHOTO -->
    <div class="about-photo">
      <img
  src={`${import.meta.env.BASE_URL}images/profile.jpeg`}
  alt="Profile Photo"
  class="profile-img"
/>

    </div>

    <!-- RIGHT : CONTENT -->
    <div class="about-content">


      <h2 class="about-title">
        Who is the <span>Architect?</span>
      </h2>

      <h1 class="about-role">
        I am a <br />
        <span>Full Stack Dev</span><span class="cursor">|</span>
      </h1>

      <p class="about-desc">
        I don't just write code; I secure it.
        As a cybersecurity student, I bridge the gap between
        <b>offensive security</b> and <b>full-stack engineering</b>.
      </p>


    </div>

  </div>

</section>




<!-- ================= GITHUB STATS ================= -->
<section class="section">
  <div class="glass" style="text-align:center;">
    <h2>GitHub Stats</h2>

    <div id="github-stats" style="margin-top:20px;">
      <div><b>Repos:</b> <span id="gh-repos">–</span></div>
      <div><b>Followers:</b> <span id="gh-followers">–</span></div>
      <div><b>Stars:</b> <span id="gh-stars">–</span></div>
    </div>
  </div>
</section>

<section class="section">
  <div class="glass">
    <h2 style="text-align:center;">GitHub Activity</h2>

    <iframe
      src="https://github-readme-activity-graph.vercel.app/graph?username=mithra916&theme=github-compact"
      style="
        width:100%;
        height:320px;
        border:none;
        margin-top:20px;
      "
      loading="lazy"
    ></iframe>

  </div>
</section>




<!-- ================= SKILLS ================= -->
<section class="section">
  <h2 class="section-title">Skills & Tools</h2>
  <p class="section-sub">Cybersecurity & Backend Expertise</p>

  <div class="grid grid-2">

    <div class="glass">
      <h3>Offensive Security</h3>
      <div class="tag-group">
        <span class="tag">Web Pentesting</span>
        <span class="tag">OWASP Top 10</span>
        <span class="tag">SQLi</span>
        <span class="tag">XSS</span>
        <span class="tag">CSRF</span>
        <span class="tag">IDOR</span>
        <span class="tag">Burp Suite</span>
        <span class="tag">Nmap</span>
      </div>
    </div>

    <div class="glass">
      <h3>Defensive Security</h3>
      <div class="tag-group">
        <span class="tag">Secure Coding</span>
        <span class="tag">Access Control</span>
        <span class="tag">Auth Hardening</span>
        <span class="tag">Vuln Fixing</span>
        <span class="tag">Log Analysis</span>
      </div>
    </div>

    <div class="glass">
      <h3>Backend Development</h3>
      <div class="tag-group">
        <span class="tag">REST APIs</span>
        <span class="tag">JWT</span>
        <span class="tag">Database Design</span>
        <span class="tag">Secure APIs</span>
      </div>
    </div>

    <div class="glass">
      <h3>Tools</h3>
      <div class="tag-group">
        <span class="tag">Linux</span>
        <span class="tag">Git</span>
        <span class="tag">Python</span>
        <span class="tag">Postman</span>
        <span class="tag">MySQL</span>
      </div>
    </div>

  </div>
</section>


<!-- ================= PROJECTS ================= -->
<section id="projects" class="section">
  <h2 class="section-title">Projects</h2>
  <p class="section-sub">Security & Development Work</p>

  <div class="grid grid-2">

    <div class="glass">
      <h3>iAMPact</h3>
      <p>
        A cybersecurity platform demonstrating real-world web vulnerabilities
        and mitigation techniques.
      </p>
      <div class="tag-group">
        <span class="tag">Web Security</span>
        <span class="tag">OWASP</span>
        <span class="tag">Pentesting</span>
      </div>
    </div>

    <div class="glass">
      <h3>CipherEye</h3>
      <p>
        Security analysis tool to identify authentication and access control flaws.
      </p>
      <div class="tag-group">
        <span class="tag">Auth Testing</span>
        <span class="tag">Python</span>
        <span class="tag">Linux</span>
      </div>
    </div>

    <div class="glass">
      <h3>Deepfake Detection</h3>
      <p>
        ML-based system to detect manipulated images and videos.
      </p>
      <div class="tag-group">
        <span class="tag">Machine Learning</span>
        <span class="tag">Computer Vision</span>
        <span class="tag">Python</span>
      </div>
    </div>

  </div>
</section>


<!-- ================= CONTACT ================= -->
<section id="contact" class="section">
  <h2 class="section-title">Contact</h2>

  <div class="grid grid-2">

    <div class="glass">
      <p><b>Email:</b> logamithra09@email.com</p>
      <p><b>Location:</b> Chennai, Tamil Nadu, India</p>
    </div>

    <div class="glass">
      <input placeholder="Your name" />
      <input placeholder="Email" />
      <textarea placeholder="Message"></textarea>
      <button class="btn primary">Send</button>
    </div>

  </div>
</section>

</BaseLayout>
